@{
}

@model List<Studentportal.Web.Models.Entities.Student>

<h1 class="text-center mb-4">All Students</h1>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th class="d-none">ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Subscribed</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td class="d-none">@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Phone</td>
                    <td>@(student.Subscribed ? "Yes" : "No")</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</table>
